#!/usr/bin/env bash

gsettings set org.gtk.Settings.FileChooser sort-directories-first "true" # Show directories before files
gsettings set org.gtk.Settings.FileChooser show-hidden "true" # Show hidden files

gsettings set org.gnome.desktop.peripherals.touchpad tap-to-click "true" # Enable tap-to-click

# Open new terminals as tabs, and don't print an error if GNOME Terminal isn't installed

gsettings set org.gnome.Terminal.Legacy.Settings new-terminal-mode "tab" > /dev/null 2>&1

# 12-hour date format

gsettings set org.gnome.desktop.interface clock-format "12h"
gsettings set org.gtk.Settings.FileChooser clock-format "12h"
